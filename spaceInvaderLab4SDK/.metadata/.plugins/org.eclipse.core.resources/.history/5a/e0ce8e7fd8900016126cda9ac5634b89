#ifndef INTERFACE_H_
#define INTERFACE_H_


#endif /* INTERFACE_H_ */

// Draws the line at the bottom of the screen
void interface_draw_line(uint32_t * framePointer);

// Draws the "extra life" tanks
void interface_draw_tanks(uint32_t * framePointer);

//Draws the lives to the screen;
void interface_draw_lives(uint32_t * framePointer);

// Draws the Score to the screen
void interface_draw_score(uint32_t * framePointer);

//Draw the score in numbers
void interface_init_numbers(uint32_t * framePointer);

// adds a value to the score
void interface_increment_score(uint32_t * framePointer,uint32_t incrementor);


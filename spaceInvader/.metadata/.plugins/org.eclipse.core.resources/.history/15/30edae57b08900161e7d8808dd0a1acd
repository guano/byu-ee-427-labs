	case 6:
		if(bunker_zero[6]== 4){
			rand_bunker(framePointer);
		}else {
			degrigation_patern(6, 12, 0, bunker_zero[6], framePointer);
			bunker_zero[6]+=1;
		}
		break;
	case 7:
		if(bunker_zero[7]== 4){
			rand_bunker(framePointer);
		}else {
			degrigation_patern(6, 18, 0, bunker_zero[7], framePointer);
			bunker_zero[7]+=1;
		}
		break;
	case 8:
		if(bunker_zero[8]== 4){
			rand_bunker(framePointer);
		}else {
			degrigation_patern(12, 0, 0, bunker_zero[8], framePointer);
			bunker_zero[8]+=1;
		}
		break;
	case 9:
		if(bunker_zero[9]== 4){

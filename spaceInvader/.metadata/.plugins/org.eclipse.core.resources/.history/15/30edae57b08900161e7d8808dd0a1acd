			rand_bunker(framePointer);
		}else {
			degrigation_patern(0, 18, 0, bunker_zero[3], framePointer);
			bunker_zero[3]+=1;
		}
		break;
	case 4:
		if(bunker_zero[4]== 4){
			rand_bunker(framePointer);
		}else {
			degrigation_patern(6, 0, 0, bunker_zero[4], framePointer);
			bunker_zero[4]+=1;
		}
		break;
	case 5:
		if(bunker_zero[5]== 4){
			rand_bunker(framePointer);
		}else {
			degrigation_patern(6, 6, 0, bunker_zero[5], framePointer);
			bunker_zero[5]+=1;
		}
